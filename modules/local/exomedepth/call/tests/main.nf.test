nextflow_process {

    name "Test Process EXOMEDEPTH_CALL"
    script "../main.nf"
    process "EXOMEDEPTH_CALL"

    tag "modules"
    tag "modules_local"
    tag "exomedepth_call"

    test("homo_sapiens - bed, merged_counts") {

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id: 'test', chromosome: 'merged' ],
                    file(params.merged_counts, checkIfExists:true),
                    "Sample1",
                    "Sample1,Sample2,Sample3,Sample4,Sample5",
                    "Fam1,Fam2,Fam3,Fam4,Fam5"
                ])
                input[1] = Channel.value([
                    [ id:'exon' ],
                    file(params.roi)
                ])
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("homo_sapiens - bed, merged_counts - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id: 'test', chromosome: 'merged' ],
                    file(params.merged_counts, checkIfExists:true),
                    "Sample1",
                    "Sample1,Sample2,Sample3,Sample4,Sample5",
                    "Fam1,Fam2,Fam3,Fam4,Fam5"
                ])
                input[1] = Channel.value([
                    [ id:'exon' ],
                    file(params.roi)
                ])
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
