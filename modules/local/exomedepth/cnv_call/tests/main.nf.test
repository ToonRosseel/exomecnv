nextflow_process {

    name "Test Process CNV_CALL"
    script "../main.nf"
    process "CNV_CALL"

    test("homo_sapiens - bed, merged_counts") {

        when {
            process {
                """
                input[0] = Channel.value([
                    [ id:'exon' ],
                    file(params.roi_auto)
                ])
                input[1] = Channel.of([
                    [ id: 'test', chr:"autosomal", sam:["Sample1", "Sample2", "Sample3", "Sample4", "Sample5"], fam:["Fam1", "Fam2", "Fam3", "Fam4", "Fam5"] ],
                    "Sample1",
                    file(params.merged_counts, checkIfExists:true)
                ])
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("homo_sapiens - bed, merged_counts - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = Channel.value([
                    [ id:'exon' ],
                    file(params.roi_auto)
                ])
                input[1] = Channel.of([
                    [ id: 'test', chr:"autosomal", sam:["Sample1", "Sample2", "Sample3", "Sample4", "Sample5"], fam:["Fam1", "Fam2", "Fam3", "Fam4", "Fam5"] ],
                    "Sample1",
                    file(params.merged_counts, checkIfExists:true)
                ])
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
