nextflow_process {

    name "Test Process CNV_MERGE"
    script "../main.nf"
    process "CNV_MERGE"

    test("homo_sapiens - bam, bai, roi") {

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id: 'Sample1', chr:"autosomal", sam:["Sample1", "Sample2", "Sample3", "Sample4", "Sample5"], fam:["Fam1", "Fam2", "Fam3", "Fam4", "Fam5"] ],
                    file(params.cnv_auto, checkIfExists:true),
                    file(params.cnv_chrx, checkIfExists:true)
                ])
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("homo_sapiens - bam, bai, roi - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id: 'Sample1', chr:"autosomal", sam:["Sample1", "Sample2", "Sample3", "Sample4", "Sample5"], fam:["Fam1", "Fam2", "Fam3", "Fam4", "Fam5"] ],
                    file(params.cnv_auto, checkIfExists:true),
                    file(params.cnv_chrx, checkIfExists:true)
                ])
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
